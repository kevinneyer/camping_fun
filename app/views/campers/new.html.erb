<h1>Create a New Camper!</h1>

<%if flash[:errors] %>
  <ul>
  <% flash[:errors].each do |error| %>
    <li><%= error %></li>
  <%end%>
  </ul>
<%end%>

<%= form_for @camper do |f| %>
<%= f.label :name %>
<%= f.text_field :name %><br>

<%= f.label :age %>
<%= f.text_field :age %><br>

<%= f.submit%>
<%end%>